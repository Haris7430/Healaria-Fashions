	<script>
        document.addEventListener('DOMContentLoaded', function() {
            // Axios-based search functionality
            const searchForm = document.getElementById('search_input_box');
            const searchInput = document.getElementById('search_input');
            const resultsContainer = document.querySelector('.category-list .row');

            if (searchForm) {
                searchForm.addEventListener('submit', async function(e) {
                    e.preventDefault();
                    
                    try {
                        const searchTerm = searchInput.value;
                        const response = await axios.get('/search', {
                            params: {
                                q: searchTerm,
                                globalSearch: document.getElementById('globalSearchToggle')?.checked || false
                            }
                        });

                        // Update products container
                        resultsContainer.innerHTML = response.data.products.map(product => `
                            <div class="col-lg-4 col-md-6">
                                <div class="single-product">
                                    <a href="/productDetails?id=${product._id}">
                                        <img class="img-fluid" src="/uploads/product-images/${product.productImages[0]}" alt="${product.productName}">
                                        
                                        ${product.offerPercentage ? `
                                            <div class="offer-badge">
                                                ${product.offerPercentage}% OFF
                                            </div>
                                        ` : ''}
                                    </a>
                                    <div class="product-details">
                                        ${product.productName.length > 20 
                                            ? product.productName.substring(0, 20) + '...' 
                                            : product.productName}
                                        <div class="price">
                                            ${product.offerPrice ? `
                                                <h6 class="offer-price">$ ${product.offerPrice.toFixed(2)}</h6>
                                                <h6 class="l-through regular-price">$ ${product.regularPrice.toFixed(2)}</h6>
                                            ` : `
                                                <h6>$ ${product.regularPrice.toFixed(2)}</h6>
                                            `}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        `).join('');

                        // Update pagination if needed
                        // You might want to add logic to update pagination here
                    } catch (error) {
                        console.error('Search error:', error);
                        alert('An error occurred while searching');
                    }
                });
            }

            // Axios-based sorting and filtering
            const sortSelect = document.querySelector('select[name="sort"]');
            const categoryRadios = document.querySelectorAll('input[name="category"]');

            // Sorting handler
            if (sortSelect) {
                sortSelect.addEventListener('change', async function() {
                    try {
                        const response = await axios.get('/shop-page', {
                            params: {
                                sort: this.value,
                                category: document.querySelector('input[name="category"]:checked')?.value || ''
                            }
                        });

                        // Update products and pagination similar to search
                        resultsContainer.innerHTML = response.data.products.map(product => `
                            <!-- Same product rendering logic as above -->
                        `).join('');
                    } catch (error) {
                        console.error('Sorting error:', error);
                    }
                });
            }

            // Category filtering handler
            categoryRadios.forEach(radio => {
                radio.addEventListener('change', async function() {
                    try {
                        const response = await axios.get('/shop-page', {
                            params: {
                                category: this.value,
                                sort: document.querySelector('select[name="sort"]')?.value || 'default'
                            }
                        });

                        // Update products and pagination similar to search
                        resultsContainer.innerHTML = response.data.products.map(product => `
                            <!-- Same product rendering logic as above -->
                        `).join('');
                    } catch (error) {
                        console.error('Category filtering error:', error);
                    }
                });
            });
        });
