	}
	
	.filter-box {
		background: #f8f9fa;
		border: 1px solid #e9ecef;
		border-radius: 6px;
		padding: 12px 15px;
		transition: all 0.3s ease;
		cursor: pointer;
	}
	
	.filter-box:hover {
		background: #fff;
		border-color: #007bff;
		box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
	}
	
	.filter-box input[type="radio"] {
		margin-right: 10px;
	}
	
	.filter-box label {
		cursor: pointer;
		margin-bottom: 0;
		font-size: 14px;
		color: #555;
		display: inline-block;
		vertical-align: middle;
	}
	
	/* Custom radio button styling */
	.pixel-radio {
		-webkit-appearance: none;
		-moz-appearance: none;
		appearance: none;
		width: 16px;
		height: 16px;
		border: 2px solid #ddd;
		border-radius: 50%;
		outline: none;
		margin-right: 10px;
		position: relative;
		vertical-align: middle;
		cursor: pointer;
	}
	
	.pixel-radio:checked {
		border-color: #007bff;
	}
	
	.pixel-radio:checked:after {
		content: '';
		width: 8px;
		height: 8px;
		background: #007bff;
		position: absolute;
		top: 50%;
		left: 50%;
		transform: translate(-50%, -50%);
		border-radius: 50%;
	}
	
	/* Active state styling */
	.filter-box input[type="radio"]:checked + label {
		color: #007bff;
		font-weight: 500;
	}
	
	.filter-box input[type="radio"]:checked ~ .filter-box {
		border-color: #007bff;
		background: #f0f7ff;
	}
	
	/* Responsive adjustments */
	@media (max-width: 768px) {
		.sidebar-categories {
			margin-bottom: 20px;
		}
		
		.filter-box {
			padding: 10px 12px;
		}
		
		.filter-box label {
			font-size: 13px;
		}
	}
